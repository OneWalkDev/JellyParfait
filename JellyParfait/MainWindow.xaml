<Window x:Class="JellyParfait.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="JellyParfait" Height="500" Width="800">
    <Window.Resources>
        <Image x:Key="Play" Source="/Resources/play.png"/>
        <Image x:Key="Pause" Source="/Resources/pause.png"/>
        <Image x:Key="Prev" Source="/Resources/prev.png"/>
        <Image x:Key="Next" Source="/Resources/next.png"/>
    </Window.Resources>

    <Grid>
        <DockPanel>
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="ファイル(_F)">
                    <MenuItem Header="test"/>
                    <Separator />
                    <MenuItem Header="終了" Click="exit_click"/>
                </MenuItem>
            </Menu>
        </DockPanel>

        <Grid Margin="0,20,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="10*"/>
            </Grid.RowDefinitions>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="6*"/>
                    <ColumnDefinition Width="80"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <TextBox x:Name="searchTextBox" Margin="10,5,0,5" Text="https://www.youtube.com/watch?v=n46-TfPTrXk" />
                </Grid>
                <Grid Grid.Column="1">
                    <Button Content="追加" Margin="0,5,10,5" Click="Button_Click"/>
                </Grid>
            </Grid>
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="7*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
              
                <Grid Grid.Row="0" Margin="5,10,5,10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="10*"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Label x:Name="titleLabel" Content="" VerticalContentAlignment="Center"/>
                    </Grid>
                    <Grid Grid.Row="1">
                        <ListView x:Name="MusicQuere" ItemContainerStyle="{StaticResource ContainerStyle}">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1*"/>
                                            <ColumnDefinition Width="20*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid Grid.Column="0">
                                            <StackPanel>
                                                <Button Content="▶"  Width="20" Height="20" Command="{Binding ClickCommand}"/>
                                            </StackPanel>
                                        </Grid>
                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="{Binding Title}" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>
                    
                </Grid>
                
                <Grid Grid.Row="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="0.2*"/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0.1*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="10*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="0.1*"/>
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="1">
                                <Label x:Name="startLabel" Content="0:00" HorizontalAlignment="Center"/>
                            </Grid>
                            <Grid Grid.Column="2">
                                <Slider x:Name="MusicTimeSlider" Margin="10,0,10,0" Minimum="0" />
                            </Grid>
                            <Grid Grid.Column="3">
                                <Label x:Name="endLabel" Content="0:00" HorizontalAlignment="Center"/>
                            </Grid>
                        </Grid>
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="10*"/>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition Width="0.2*"/>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition Width="0.2*"/>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition Width="10*"/>
                            </Grid.ColumnDefinitions>

                            <Grid Grid.Column="1">
                                <Button  Click="PrevButton_Click"  >
                                    <DynamicResource ResourceKey="Prev"/>
                                </Button>
                            </Grid>
                            <Grid Grid.Column="3">
                                <Button  Click="PlayButton_Click"  >
                                    <DynamicResource ResourceKey="Play"/>
                                </Button>
                            </Grid>
                            <Grid Grid.Column="5">
                                <Button  Click="NextButton_Click"  >
                                    <DynamicResource ResourceKey="Next"/>
                                </Button>
                            </Grid>
                        </Grid>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>
