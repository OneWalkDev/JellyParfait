<Window x:Class="JellyParfait.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="JellyParfait" Height="500" Width="800"
        Closing="Window_Closing"
        Closed="Window_Closed">
    <Window.Resources>
        <Image x:Key="Play" Source="/Resources/play.png"/>
        <Image x:Key="Pause" Source="/Resources/pause.png"/>
        <Image x:Key="Prev" Source="/Resources/prev.png"/>
        <Image x:Key="Next" Source="/Resources/next.png"/>
    </Window.Resources>

    <Grid>
        <DockPanel>
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="ファイル(_F)">
                    <MenuItem Header="test"/>
                    <Separator />
                    <MenuItem Header="終了" Click="Exit_Click"/>
                </MenuItem>
                <MenuItem Header="ヘルプ(_H)">
                    <MenuItem Header="バージョン情報" Click="Version_Infomation_Click"/>
                </MenuItem>

            </Menu>
        </DockPanel>

        <Grid Margin="0,20,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="10*"/>
            </Grid.RowDefinitions>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="6*"/>
                    <ColumnDefinition Width="80"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <TextBox x:Name="searchTextBox" Margin="10,5,0,5" Text="https://www.youtube.com/watch?list=PL1kIh8ZwhZzKMU8MELWCfveQifBZWUIhi"/>
                </Grid>
                <Grid Grid.Column="1">
                    <Button Content="追加" Margin="0,5,10,5" Click="Button_Click"/>
                </Grid>
            </Grid>
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="7*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
              
                <Grid Grid.Row="0" Margin="5,10,5,10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="10*"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Label x:Name="titleLabel" Content="" VerticalContentAlignment="Center"/>
                    </Grid>
                    <Grid Grid.Row="1">
                        <ListView x:Name="MusicQuere" ItemContainerStyle="{StaticResource ContainerStyle}">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Background="{Binding Color}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="20"/>
                                            <ColumnDefinition Width="20"/>
                                            <ColumnDefinition Width="7"/>
                                            <ColumnDefinition Width="20"/>
                                            <ColumnDefinition Width="1"/>
                                            <ColumnDefinition Width="20*"/>
                                            <ColumnDefinition Width="20"/>
                                        </Grid.ColumnDefinitions>

                                        <Grid Grid.Column="0">
                                            <StackPanel>
                                                <Button Width="20" Height="20" Command="{Binding ClickCommand}" Background="{x:Null}"   BorderBrush="{x:Null}">
                                                    <Image Source="./Resources/QuereUp.png" Margin="2,2,2,2"/>
                                                </Button>
                                            </StackPanel>
                                        </Grid>
                                        <Grid Grid.Column="1">
                                            <StackPanel>
                                                <Button Width="20" Height="20" Command="{Binding ClickCommand}" Background="{x:Null}"  BorderBrush="{x:Null}">
                                                    <Image Source="./Resources/QuereDown.png" Margin="2,2,2,2"/>
                                                </Button>
                                            </StackPanel>
                                        </Grid>
                                        
                                        <Grid Grid.Column="3">
                                            <StackPanel>
                                                <Button Width="20" Height="20" Command="{Binding ClickCommand}" Background="{x:Null}"  BorderBrush="{x:Null}" Visibility="{Binding Visibility}">
                                                    <Image Source="./Resources/QuerePlay.png" Margin="2,2,2,2"/>
                                                </Button>
                                            </StackPanel>
                                        </Grid>
                                        
                                        <StackPanel Grid.Column="5" Margin="5,0,0,0">
                                            <TextBlock Text="{Binding Title}" VerticalAlignment="Center" Background="{Binding Color}"/>
                                            
                                        </StackPanel>
                                       
                                        <Grid Grid.Column="6" HorizontalAlignment="Right">
                                            <StackPanel>
                                                <Button Width="20" Height="20" Command="{Binding ClickCommand}" Background="{x:Null}" BorderBrush="{x:Null}">
                                                    <Image Source="./Resources/QuereDisponse.png" Margin="2,2,2,2"/>
                                                </Button>
                                            </StackPanel>
                                        </Grid>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>
                    
                </Grid>
                
                <Grid Grid.Row="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="23"/>
                            <RowDefinition Height="0.2*"/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0.1*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="10*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="0.1*"/>
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="1">
                                <Label x:Name="startLabel" Content="0:00" HorizontalAlignment="Center"/>
                            </Grid>
                            <Grid Grid.Column="2">
                                <Slider x:Name="MusicTimeSlider" Margin="10,0,10,0" Minimum="0" PreviewMouseUp="MusicTimeSlider_PreviewMouseUp" PreviewMouseDown="MusicTimeSlider_PreviewMouseDown" IsMoveToPointEnabled ="True"/>
                            </Grid>
                            <Grid Grid.Column="3">
                                <Label x:Name="endLabel" Content="0:00" HorizontalAlignment="Center"/>
                            </Grid>
                        </Grid>
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="10*"/>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition Width="0.5*"/>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition Width="0.5*"/>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition Width="10*"/>
                            </Grid.ColumnDefinitions>

                            <Grid Grid.Column="1">
                                <Button  Click="PrevButton_Click" BorderBrush="{x:Null}" Background="#F0F0F0" >
                                    <DynamicResource ResourceKey="Prev"/>
                                </Button>
                            </Grid>
                            <Grid Grid.Column="3">
                                <Button x:Name="PlayButton" Click="PlayButton_Click"  BorderBrush="{x:Null}" Background="#F0F0F0">
                                    <DynamicResource ResourceKey="Play"/>
                                </Button>
                            </Grid>
                            <Grid Grid.Column="5">
                                <Button  Click="NextButton_Click"  BorderBrush="{x:Null}" Background="#F0F0F0">
                                    <DynamicResource ResourceKey="Next"/>
                                </Button>
                            </Grid>
                        </Grid>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>
